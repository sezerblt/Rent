<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
        <property name="scopes">
            <map>
                <entry key="thread">
                    <bean class="com.company.rental.ThreadScope"/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="customerRepository" class="com.company.rental.CustomerRepositoryImpl"></bean>
    <bean id="rentalRepository"   class="com.company.rental.RentalRepositoryImpl"></bean>

    <bean id="rentalService"
          class="com.company.rental.RentalServiceImpl"
          scope="thread">
        <property name="customerRepository" ref="customerRepository" />
        <property name="rentalRepository"   ref="rentalRepository" />
    </bean>


    <bean id="replacer" class="com.company.util.ToolsClass"/>

    <bean id="aClass" class="com.company.util.AClass">
        <replaced-method name="getTool" replacer="replacer">
            <arg-type>String</arg-type>
        </replaced-method>
    </bean>


    <bean id="creditCard"  class="com.company.util.CreditCard"
    factory-method="getCard_instance" />

</beans>